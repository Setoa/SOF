//-post = question datavalues
//-qusername = question username
//-ausername = answer username
//-answer = answer dataValues
//-

extends layout
block content
    include navi
    div.container
        table
            tr
                th 글번호
                td #{post.id}
                th 글쓴이
                td #{qusername}
            tr
                th Title
                td #{post.title}
            tr
                td #{post.content}
    div.container
        form(method="post" action=`/codeqna/post/${post.id}/answer/${answer.id}`)
            input(type="hidden" value="PUT" name="_method")
            table
                tr
                    th 글번호
                    td #{answer.id}
                    th 글쓴이
                    td #{ausername}
                tr
                    th Title
                    td
                        input(type="text" name="atitle" value=answer.title requried)
                tr
                    td 
                        textarea(type="text" name="acontent" cols="30" rows="10") #{answer.content}
                tr
                    td
                        a.btn.btn-primary(type="button" href=`/codeqna/post/${post.id}` style="float:left") 취소
                    td
                        button.btn.btn-primary(type="submit" style="float:right") 완료